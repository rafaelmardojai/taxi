{
  "app-id": "com.github.alecaddd.taxi",
  "runtime": "org.gnome.Platform",
  "runtime-version": "43",
  "sdk": "org.gnome.Sdk",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.vala"
  ],
  "build-options": {
    "prepend-path": "/usr/lib/sdk/vala/bin/",
    "prepend-ld-library-path": "/usr/lib/sdk/vala/lib"
  },

  "command": "com.github.alecaddd.taxi",
  "finish-args": [
    "--share=ipc",
    "--share=network",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--filesystem=host",
    "--talk-name=org.gtk.vfs.*",
    "--filesystem=xdg-run/gvfsd"
  ],

  "modules": [
    {
      "name": "gee",
      "buildsystem": "autotools",
      "sources": [
        {
          "type": "archive",
          "url": "https://download.gnome.org/sources/libgee/0.20/libgee-0.20.6.tar.xz",
          "sha256": "1bf834f5e10d60cc6124d74ed3c1dd38da646787fbf7872220b8b4068e476d4d"
        }
      ]
    },
    {
      "name": "taxi",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "dir",
          "path": "."
        }
      ]
    }
  ]
}